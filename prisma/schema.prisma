

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  
}

// A patient of the dental practice
model Patient {
  id         Int          @id @default(autoincrement())
  name       String
  age        Int
  email      String?
  treatments Treatment[]
}

// A single treatment record for a patient
model Treatment {
  id         Int          @id @default(autoincrement())
  patientId  Int
  type       String
  date       DateTime
  notes      String?
  patient    Patient  @relation(fields: [patientId], references: [id])
}