generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Patient {
  id         String      @id @default(uuid())
  name       String
  age        Int
  email      String?
  treatments Treatment[]
}

model Treatment {
  id         String   @id @default(uuid())
  patientId  String
  type       String
  date       DateTime
  notes      String?
  patient    Patient  @relation(fields: [patientId], references: [id])
}